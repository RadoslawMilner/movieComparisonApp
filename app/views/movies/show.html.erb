<h1><%= @movie.title %></h1>
<h2><%= @movie.year %></h2>

<small><%= link_to "Back to all movies", movies_path %></small>

<h3> Victorious comparisons: </h3>
<ul>
  <% @movie.superior_comparisons.each do |comparison| %>
  <li><%= comparison.user.name %> likes this movie more than <%= comparison.inferior_movie.title %></li>
  <% end %>
</ul><br>

<h3> Losing comparisons: </h3>
<ul>
  <% @movie.inferior_comparisons.each do |comparison| %>
  <li><%= comparison.user.name %> thinks that <%= comparison.superior_movie.title %> is better </li>
  <% end %>
</ul><br>
